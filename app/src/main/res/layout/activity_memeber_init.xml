<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dog_background"
    tools:context=".MemberInitActivity">

    <TextView
        android:id="@+id/tv_PetStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="420dp"
        android:fontFamily="@font/lobster"
        android:text="PetStop"
        android:textColor="@color/gray"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@color/gray"
        android:hint=" Name"
        app:layout_constraintTop_toBottomOf="@id/tv_PetStop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="380dp"/>

    <EditText
        android:id="@+id/phoneNumberEditText"
        android:inputType="phone"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@color/gray"
        android:hint=" Phone number"
        app:layout_constraintTop_toBottomOf="@id/nameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="370dp"/>

    <EditText
        android:id="@+id/birthdayEditText"
        android:inputType="date"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@color/gray"
        android:hint=" Date of Birth"
        app:layout_constraintTop_toBottomOf="@id/phoneNumberEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="310dp"/>

    <EditText
        android:id="@+id/zipCodeEditText"
        android:inputType="textPostalAddress"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@color/gray"
        android:hint=" Zip code"
        app:layout_constraintTop_toBottomOf="@id/birthdayEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="250dp"/>

    <Button
        android:id="@+id/checkButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Confirm"
        android:textColor="@color/black"
        android:backgroundTint="@color/light_yellow"
        app:layout_constraintTop_toBottomOf="@id/zipCodeEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>